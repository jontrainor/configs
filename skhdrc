# prevent skhd from monitoring events for specific applications.

# --- escape
ctrl - space : skhd -k escape

# --- arrow keys
# arrow key remapping
ctrl - h : skhd -k left
ctrl - j : skhd -k down
ctrl - k : skhd -k up
ctrl - l : skhd -k right

# left/right by word remapping
ctrl + alt - h : skhd -k "alt - left"
ctrl + alt - l : skhd -k "alt - right"
ctrl + alt + shift - h : skhd -k "shift + alt - left"
ctrl + alt + shift - l : skhd -k "shift + alt - right"

 # arrow key with select remapping
ctrl + shift - h : skhd -k "shift - left"
ctrl + shift - j : skhd -k "shift - down"
ctrl + shift - k : skhd -k "shift - up"
ctrl + shift - l : skhd -k "shift - right"

# --- Spotify
# play/pause
ctrl - backspace : osascript -e 'tell application "Spotify" to playpause'
ctrl + shift - n : osascript -e 'tell application "Spotify" to previous track'
ctrl + shift - m : osascript -e 'tell application "Spotify" to next track'